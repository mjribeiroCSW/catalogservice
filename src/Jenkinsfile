pipeline {
    agent any

    environment {
        ARTIFACTORY_URL = 'https://mateusjr.jfrog.io/artifactory'
        ARTIFACTORY_REPO = 'catalog-libs-snapshot'
        ARTIFACTORY_CREDS = credentials('b6bee003-094c-46e3-9a16-2ed3b8dc5b29')
    }

    stages {
        // checkout de master, based on jenkins configuration
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // builds the java project
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        // runs the unit tests
        stage('Unit Test') {
            steps {
                //sh 'mvn test'
                sh 'mvn -Dtest=BookServiceTests#testMethod test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        // Run integration tests
        stage('Integration Test') {
            steps {
                sh 'mvn -Dtest=BookControllerIntegrationTests#testMethod test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                withCredentials([string(credentialsId: 'b6bee003-094c-46e3-9a16-2ed3b8dc5b29', variable: 'ARTIFACTORY_TOKEN')])
                {
                    sh "mvn deploy -X -Dartifactory.username=mateusjr -Dartifactory.password=$ARTIFACTORY_TOKEN -DskipTests"
                }
            }
        }
    }
}