pipeline {
    agent any

    stages {
        stage('Start PostgreSQL') {
                    steps {
                        script {
                            sh 'docker pull postgres:latest'
                            sh 'docker run -d --name test-postgres -e POSTGRES_DB=booksdb -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -p 5432:5432 postgres'

                            sh "while ! docker exec test-postgres pg_isready -U postgres -h localhost -p 5432; do sleep 1; done"
                        }
                    }
        }

        // checkout de master, based on jenkins configuration
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // builds the java project
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        // runs the unit tests
        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        // Run integration tests
        stage('Integration Test') {
            steps {
                sh 'mvn verify -Pintegration-test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        stage('Stop PostgreSQL') {
            steps {
                script {
                    sh 'docker stop test-postgres'
                    sh 'docker rm test-postgres'
                }
            }
        }
    }
}