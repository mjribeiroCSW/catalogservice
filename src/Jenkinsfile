pipeline {
    agent any

    environment {
        ARTIFACTORY_URL = 'https://mateusjr.jfrog.io/artifactory'
        ARTIFACTORY_REPO = 'catalog-libs-snapshot'
        ARTIFACTORY_CREDS = credentials('e7bb3fe9-7dfa-4452-9ce0-c6fed1d4bbf6')
    }

    stages {
        // checkout de master, based on jenkins configuration
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // builds the java project
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        // runs the unit tests
        stage('Unit Test') {
            steps {
                //sh 'mvn test'
                sh 'mvn -Dtest=BookServiceTests#testMethod test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        // Run integration tests
        stage('Integration Test') {
            steps {
                sh 'mvn -Dtest=BookControllerIntegrationTests#testMethod test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'ARTIFACTORY_CREDENTIALS_ID', passwordVariable: 'ARTIFACTORY_PWD', usernameVariable: 'ARTIFACTORY_USER')])
                {
                    sh "mvn deploy -Dartifactory.username=$ARTIFACTORY_USER -Dartifactory.password=$ARTIFACTORY_PWD -DskipTests"
                }
            }
        }
    }
}